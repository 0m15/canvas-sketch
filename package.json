{
  "name": "sketches",
  "version": "1.0.0",
  "description": "A utility for quickly prototyping 2D and WebGL sketches",
  "main": "./dist/sketches.js",
  "license": "MIT",
  "author": {
    "name": "Matt DesLauriers",
    "email": "dave.des@gmail.com",
    "url": "https://github.com/mattdesl"
  },
  "dependencies": {
    "convert-units": "^2.3.4",
    "dateformat": "^3.0.3",
    "deep-equal": "^1.0.1",
    "defined": "^1.0.0",
    "get-canvas-context": "^1.0.2",
    "get-ext": "^1.0.2",
    "is-class": "0.0.5",
    "is-dom": "^1.0.9",
    "is-promise": "^2.1.0",
    "load-asset": "^1.2.0",
    "npm-run-all": "^4.1.3",
    "object-assign": "^4.1.1",
    "pad-left": "^2.1.0",
    "right-now": "^1.0.0"
  },
  "devDependencies": {
    "microbundle": "^0.4.4",
    "sourceify": "^0.1.0"
  },
  "scripts": {
    "prepublishOnly": "npm run bundle",
    "bundle": "microbundle --entry src/index.js --target=browser --no-compress -o dist",
    "dev:bundle": "microbundle watch --entry src/index.js --target=browser --no-compress -o dist",
    "dev:server": "budo examples/index.js:bundle.js --dir examples --live -- -t sourceify",
    "dev": "npm-run-all --parallel dev:bundle dev:server"
  },
  "keywords": [
    "sketch",
    "2d",
    "processing",
    "js",
    "p5js",
    "3d",
    "webgl",
    "gl",
    "opengl",
    "threejs",
    "canvas",
    "canvas2d",
    "generative",
    "art",
    "generativeart"
  ],
  "repository": {
    "type": "git",
    "url": "git://github.com/mattdesl/sketches.git"
  },
  "homepage": "https://github.com/mattdesl/sketches",
  "bugs": {
    "url": "https://github.com/mattdesl/sketches/issues"
  }
}
